<?xml version="1.0"?>
<config>
    <tabs>
        <channelunity translate="label" module="channelunity">
            <label>ChannelUnity</label>
            <sort_order>120</sort_order>
        </channelunity>
    </tabs>
    <sections>
        <channelunityint translate="label">
            <label>ChannelUnity</label>
            <tab>channelunity</tab>
            <frontend_type>text</frontend_type>
            <sort_order>50</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <configheader>
                    <frontend_model>channelunity/configheader</frontend_model>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </configheader>
                <generalsettings translate="label">
                    <label>ChannelUnity Merchant Credentials</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <comment><![CDATA[<br />
                        <div class="custom-options">
                        <div class="box">
                        <p class="grand-total"><br /><b>Credentials</b></p>
                        <p><br />
                        Please enter the account credentials you received when you signed up for your ChannelUnity account.
                        </p><br />
                        </div>
                        </div>
                    ]]></comment>
                    <fields>
                        <merchantname>
                            <label>Merchant Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </merchantname>
                        <merchantusername>
                            <label>User Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </merchantusername>
                        <merchantpassword>
                            <label>Password</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </merchantpassword>
                        <apikey>
                            <label>API Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </apikey>
                        <ignoredisabledproducts>
                            <label>Ignore Disabled Products</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </ignoredisabledproducts>
                        <priceinctax>
                            <label>Include Tax In Submitted Prices</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </priceinctax>
                        <ignorefbaqty>
                            <label>Ignore Quantity For FBA Orders</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>45</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </ignorefbaqty>
                    </fields>
                </generalsettings>
            </groups>
        </channelunityint>
    </sections>
</config>